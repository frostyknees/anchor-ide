{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "outDir": "../dist/electron",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["../src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": false  // Explicitly enable emit for this project
  },
  "include": [
    "main.ts",
    "preload.ts",
    "electron-env.d.ts"
  ],
  "references": [
    { "path": "../tsconfig.json" }
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}