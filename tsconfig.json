// PROJECT_ROOT/tsconfig.json
{
  "compilerOptions": {
    "target": "ESNext", // Or ES2020, ES2021 etc.
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler", // Or "node" if not using Vite's specific mode
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Vite handles the emit for the renderer
    "jsx": "react-jsx",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"] // Or other relevant types for your renderer
  },
  "include": ["src", "vite.config.ts", "electron/electron-env.d.ts"], // Include src and vite config
  "references": [
    { "path": "./electron" } // This tells TypeScript about the electron project
  ]
}